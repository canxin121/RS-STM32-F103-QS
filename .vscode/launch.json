{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Openocd Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./target/thumbv7m-none-eabi/debug/${fileBasenameNoExtension}",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "svdPath": "${workspaceRoot}/STM32F103.svd",
            "configFiles": [
                "${workspaceRoot}\\cmsis-dap.cfg",
                "${workspaceRoot}\\stm32f1x.cfg",
            ],
            "preLaunchTask": "OpenOcd Flash Debug",
            "preLaunchCommands": [],
            "postLaunchCommands": [
                "monitor rtt server start 6666 0",
                //you may change   ↓  and     ↓ to adapt to your elf
                "monitor rtt setup 0x20004bc0 100 \"SEGGER RTT\"",
                "monitor rtt polling_interval 100",
                "monitor rtt start",
            ],
        },
        {
            // this require vscode entension Shell Debugger
            "type": "shell",
            "cwd": "${workspaceFolder}",
            "command": "",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "request": "launch",
            "name": "Defmt-print",
            "preLaunchTask": "defmt print",
            "presentation": {
                "hidden": true,
                "group": "Debug",
                "order": 2
            }
        },
    ],
    "compounds": [
        {
            "name": "OpenOCD Debug with Defmt",
            "configurations": [
                "Defmt-print",
                "Openocd Debug",
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 1
            }
        }
    ]
}