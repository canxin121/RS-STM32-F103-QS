    "version": "0.2.0",
    "configurations": [
        {
            "name": "Openocd Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./target/thumbv7m-none-eabi/debug/${fileBasenameNoExtension}",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "svdPath": "${workspaceRoot}/STM32F103.svd",
            "configFiles": [
                "${workspaceRoot}\\cmsis-dap.cfg",
                "${workspaceRoot}\\stm32f1x.cfg",
            ],
            "preLaunchTask": "cargo build debug",
            "preLaunchCommands": [],
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
            // "postLaunchCommands": [
            //     "monitor rtt server start 6666 0",
            //     // should span the *right* part of RAM
            //     "monitor rtt setup 0x200001a0 0x30 \"SEGGER RTT\"",
            //     "monitor rtt start",
            // ],
        }
    ]
}